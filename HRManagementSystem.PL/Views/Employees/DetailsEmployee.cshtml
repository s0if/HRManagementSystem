@model DetailsEmployeeViewModel

@{
    ViewData["Title"] = "Employee Details";
}

<div class="max-w-5xl mx-auto">
    <div class="mb-8">
        <div class="flex items-center space-x-3 mb-3">
            <a asp-action="AllEmployee" class="text-indigo-600 hover:text-indigo-800 transition-colors">
                <i class="fas fa-arrow-left"></i>
            </a>
            <h1 class="text-4xl font-bold bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent">Employee Profile</h1>
        </div>
        <p class="text-gray-600 ml-9">View detailed employee information</p>
    </div>

    <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-xl overflow-hidden border border-indigo-100">
        <div class="bg-gradient-to-r from-indigo-500 to-purple-600 h-32 relative">
            <div class="absolute -bottom-16 left-8">
                <div class="w-32 h-32 bg-white rounded-2xl flex items-center justify-center shadow-2xl border-4 border-white">
                    <i class="fas fa-user text-5xl text-indigo-600"></i>
                </div>
            </div>
        </div>

        <div class="pt-20 px-8 pb-8">
            <div class="mb-6">
                <h2 class="text-3xl font-bold text-gray-800">@Model.Name</h2>
                <p class="text-indigo-600 font-semibold text-lg">@Model.JopTitle</p>
                @{
                    string statusClass = Model.Status switch
                    {
                        "Active" => "bg-green-100 text-green-800 border-green-200",
                        "On Leave" => "bg-yellow-100 text-yellow-800 border-yellow-200",
                        "Terminated" => "bg-red-100 text-red-800 border-red-200",
                        _ => "bg-gray-100 text-gray-800 border-gray-200"
                    };
                    string statusIcon = Model.Status switch
                    {
                        "Active" => "fa-check-circle text-green-600",
                        "On Leave" => "fa-clock text-yellow-600",
                        "Terminated" => "fa-times-circle text-red-600",
                        _ => "fa-circle text-gray-600"
                    };
                }
                <div class="mt-3 inline-flex items-center space-x-2 px-4 py-2 rounded-full border @statusClass">
                    <i class="fas @statusIcon"></i>
                    <span class="font-semibold text-sm">@Model.Status</span>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
                <div class="bg-gradient-to-br from-blue-50 to-indigo-50 p-5 rounded-xl border border-indigo-100">
                    <div class="flex items-center space-x-3 mb-2">
                        <div class="w-10 h-10 bg-indigo-500 rounded-lg flex items-center justify-center">
                            <i class="fas fa-id-card text-white"></i>
                        </div>
                        <div>
                            <p class="text-xs text-gray-600 font-medium">Employee ID</p>
                            <p class="text-lg font-bold text-gray-800">@Model.Id</p>
                        </div>
                    </div>
                </div>

                <div class="bg-gradient-to-br from-purple-50 to-pink-50 p-5 rounded-xl border border-purple-100">
                    <div class="flex items-center space-x-3 mb-2">
                        <div class="w-10 h-10 bg-purple-500 rounded-lg flex items-center justify-center">
                            <i class="fas fa-envelope text-white"></i>
                        </div>
                        <div class="flex-1 min-w-0">
                            <p class="text-xs text-gray-600 font-medium">Email</p>
                            <p class="text-sm font-bold text-gray-800 truncate">@Model.Email</p>
                        </div>
                    </div>
                </div>

                <div class="bg-gradient-to-br from-green-50 to-emerald-50 p-5 rounded-xl border border-green-100">
                    <div class="flex items-center space-x-3 mb-2">
                        <div class="w-10 h-10 bg-green-500 rounded-lg flex items-center justify-center">
                            <i class="fas fa-phone text-white"></i>
                        </div>
                        <div>
                            <p class="text-xs text-gray-600 font-medium">Phone</p>
                            <p class="text-lg font-bold text-gray-800">@Model.Phone</p>
                        </div>
                    </div>
                </div>

                <div class="bg-gradient-to-br from-orange-50 to-amber-50 p-5 rounded-xl border border-orange-100">
                    <div class="flex items-center space-x-3 mb-2">
                        <div class="w-10 h-10 bg-orange-500 rounded-lg flex items-center justify-center">
                            <i class="fas fa-building text-white"></i>
                        </div>
                        <div>
                            <p class="text-xs text-gray-600 font-medium">Department</p>
                            <p class="text-lg font-bold text-gray-800">@Model.Department</p>
                        </div>
                    </div>
                </div>

                <div class="bg-gradient-to-br from-cyan-50 to-blue-50 p-5 rounded-xl border border-cyan-100">
                    <div class="flex items-center space-x-3 mb-2">
                        <div class="w-10 h-10 bg-cyan-500 rounded-lg flex items-center justify-center">
                            <i class="fas fa-calendar text-white"></i>
                        </div>
                        <div>
                            <p class="text-xs text-gray-600 font-medium">Date of Birth</p>
                            <p class="text-lg font-bold text-gray-800">@Model.DateOfBirth.ToShortDateString()</p>
                        </div>
                    </div>
                </div>

                <div class="bg-gradient-to-br from-teal-50 to-green-50 p-5 rounded-xl border border-teal-100">
                    <div class="flex items-center space-x-3 mb-2">
                        <div class="w-10 h-10 bg-teal-500 rounded-lg flex items-center justify-center">
                            <i class="fas fa-calendar-check text-white"></i>
                        </div>
                        <div>
                            <p class="text-xs text-gray-600 font-medium">Hire Date</p>
                            <p class="text-lg font-bold text-gray-800">@Model.HireDate.ToShortDateString()</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="flex items-center space-x-4 pt-6 border-t border-gray-200">
                <a asp-action="EditEmployee" asp-route-Id="@Model.Id"
                   class="flex-1 text-center px-6 py-3 bg-gradient-to-r from-indigo-500 to-purple-600 text-white font-semibold rounded-xl hover:from-indigo-600 hover:to-purple-700 shadow-lg hover:shadow-xl transition-all duration-300 flex items-center justify-center space-x-2">
                    <i class="fas fa-edit"></i>
                    <span>Edit Employee</span>
                </a>
                <a asp-action="AllEmployee"
                   class="flex-1 text-center px-6 py-3 border-2 border-gray-300 text-gray-700 font-semibold rounded-xl hover:bg-gray-50 transition-all duration-300 flex items-center justify-center space-x-2">
                    <i class="fas fa-arrow-left"></i>
                    <span>Back to List</span>
                </a>
            </div>
        </div>
    </div>
</div>
