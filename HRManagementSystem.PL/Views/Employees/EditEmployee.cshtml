@model EditEmployeeViewModel

@{
    ViewData["Title"] = "Edit Employee";
}

<div class="max-w-3xl mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold text-blue-700 mb-6">Edit Employee</h1>

    <form asp-action="EditEmployee" class="bg-white shadow rounded-lg p-6">
        <div asp-validation-summary="ModelOnly" class="mb-4 text-red-600"></div>

        <input type="hidden" asp-for="Id" />

        <div class="mb-4">
            <label asp-for="Name" class="block text-gray-700 font-medium mb-1"></label>
            <input asp-for="Name" class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-400" />
            <span asp-validation-for="Name" class="text-red-600 text-sm"></span>
        </div>

        <div class="mb-4">
            <label asp-for="DateOfBirth" class="block text-gray-700 font-medium mb-1"></label>
            <input asp-for="DateOfBirth" type="date" class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-400" />
            <span asp-validation-for="DateOfBirth" class="text-red-600 text-sm"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Email" class="block text-gray-700 font-medium mb-1"></label>
            <input asp-for="Email" class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-400" />
            <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Phone" class="block text-gray-700 font-medium mb-1"></label>
            <input asp-for="Phone" class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-400" />
            <span asp-validation-for="Phone" class="text-red-600 text-sm"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Department" class="block text-gray-700 font-medium mb-1"></label>
            <select asp-for="Department" asp-items="Model.DepartmentOptions" class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-400"></select>
            <span asp-validation-for="Department" class="text-red-600 text-sm"></span>
        </div>

        <div class="mb-4">
            <label asp-for="JopTitle" class="block text-gray-700 font-medium mb-1"></label>
            <input asp-for="JopTitle" class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-400" />
            <span asp-validation-for="JopTitle" class="text-red-600 text-sm"></span>
        </div>

        <div class="mb-4">
            <label asp-for="HireDate" class="block text-gray-700 font-medium mb-1"></label>
            <input asp-for="HireDate" type="date" class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-400" />
            <span asp-validation-for="HireDate" class="text-red-600 text-sm"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Status" class="block text-gray-700 font-medium mb-1"></label>
            <select asp-for="Status" asp-items="Model.StatusOptions" class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-400"></select>
            <span asp-validation-for="Status" class="text-red-600 text-sm"></span>
        </div>

        <div class="flex items-center space-x-4">
            <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition">Save</button>
            <a asp-action="AllEmployee" class="text-gray-600 hover:underline">Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
