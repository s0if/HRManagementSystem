@model IEnumerable<AllEmployeeViewModel>

@{
    ViewData["Title"] = "Employees";
}

<div class="max-w-7xl mx-auto">
    <div class="mb-8 flex items-center justify-between">
        <div>
            <h1 class="text-4xl font-bold bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent mb-2">Employee Directory</h1>
            <p class="text-gray-600">Manage your team members and their information</p>
        </div>
        <a asp-action="AddEmployee"
           class="flex items-center space-x-2 px-6 py-3 bg-gradient-to-r from-indigo-500 to-purple-600 text-white font-semibold rounded-xl hover:from-indigo-600 hover:to-purple-700 shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-0.5">
            <i class="fas fa-plus-circle"></i>
            <span>Add New Employee</span>
        </a>
    </div>

    <div class="bg-white/80 backdrop-blur-sm shadow-xl rounded-2xl mb-8 p-6 border border-indigo-100">
        <div class="flex items-center space-x-2 mb-4">
            <i class="fas fa-filter text-indigo-600"></i>
            <h2 class="text-lg font-semibold text-gray-800">Filters</h2>
        </div>
        <form asp-action="AllEmployee" method="get" class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <div class="relative">
                <i class="fas fa-search absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                <input type="text" name="searchTerm" value="@ViewBag.SearchTerm"
                       placeholder="Search by name or email..."
                       class="w-full pl-10 pr-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all" />
            </div>
            <div class="relative">
                <i class="fas fa-building absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                <select name="departmentFilter"
                        class="w-full pl-10 pr-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all appearance-none bg-white">
                    <option value="">All Departments</option>
                    @foreach (var dept in (List<string>)ViewBag.DepartmentOptions)
                    {
                        <option value="@dept" selected="@(ViewBag.DepartmentFilter == dept ? "selected" : null)">@dept</option>
                    }
                </select>
            </div>
            <div class="relative">
                <i class="fas fa-toggle-on absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                <select name="statusFilter"
                        class="w-full pl-10 pr-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all appearance-none bg-white">
                    <option value="">All Statuses</option>
                    @foreach (var status in (List<string>)ViewBag.StatusOptions)
                    {
                        <option value="@status" selected="@(ViewBag.StatusFilter == status ? "selected" : null)">@status</option>
                    }
                </select>
            </div>
            <button type="submit"
                    class="px-6 py-3 bg-gradient-to-r from-indigo-500 to-purple-600 text-white font-semibold rounded-xl hover:from-indigo-600 hover:to-purple-700 shadow-md hover:shadow-lg transition-all duration-300 flex items-center justify-center space-x-2">
                <i class="fas fa-search"></i>
                <span>Apply Filters</span>
            </button>
        </form>
    </div>

    @if (!Model.Any())
    {
        <div class="bg-gradient-to-r from-yellow-50 to-orange-50 border-l-4 border-yellow-500 text-yellow-800 px-6 py-4 rounded-xl shadow-md flex items-center space-x-3">
            <i class="fas fa-exclamation-triangle text-2xl"></i>
            <div>
                <p class="font-semibold">No employees found</p>
                <p class="text-sm">Try adjusting your search criteria or add a new employee.</p>
            </div>
        </div>
    }
    else
    {
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            @foreach (var item in Model)
            {
                <div class="bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 overflow-hidden border border-gray-100 transform hover:-translate-y-1">
                    <div class="bg-gradient-to-r from-indigo-500 to-purple-600 h-24 relative">
                        <div class="absolute -bottom-8 left-6">
                            <div class="w-16 h-16 bg-white rounded-full flex items-center justify-center shadow-lg border-4 border-white">
                                <i class="fas fa-user text-2xl text-indigo-600"></i>
                            </div>
                        </div>
                    </div>
                    <div class="pt-12 px-6 pb-6">
                        <h3 class="text-xl font-bold text-gray-800 mb-1">@item.Name</h3>
                        <p class="text-indigo-600 font-medium text-sm mb-4">@item.JopTitle</p>

                        <div class="space-y-2 mb-4">
                            <div class="flex items-center text-sm text-gray-600">
                                <i class="fas fa-building w-5 text-indigo-500"></i>
                                <span>@item.Department</span>
                            </div>
                            <div class="flex items-center text-sm">
                                @{
                                    string statusClass = item.Status switch
                                    {
                                        "Active" => "bg-green-100 text-green-800",
                                        "On Leave" => "bg-yellow-100 text-yellow-800",
                                        "Terminated" => "bg-red-100 text-red-800",
                                        _ => "bg-gray-100 text-gray-800"
                                    };
                                }
                                <i class="fas fa-circle w-5 text-xs @(item.Status == "Active" ? "text-green-500" : item.Status == "On Leave" ? "text-yellow-500" : "text-red-500")"></i>
                                <span class="px-3 py-1 rounded-full text-xs font-semibold @statusClass">@item.Status</span>
                            </div>
                        </div>

                        <div class="flex items-center space-x-2 pt-4 border-t border-gray-100">
                            <a asp-action="DetailsEmployee" asp-route-Id="@item.Id"
                               class="flex-1 text-center px-3 py-2 bg-indigo-50 text-indigo-600 font-medium rounded-lg hover:bg-indigo-100 transition-colors flex items-center justify-center space-x-1">
                                <i class="fas fa-eye text-xs"></i>
                                <span class="text-sm">View</span>
                            </a>
                            <a asp-action="EditEmployee" asp-route-Id="@item.Id"
                               class="flex-1 text-center px-3 py-2 bg-blue-50 text-blue-600 font-medium rounded-lg hover:bg-blue-100 transition-colors flex items-center justify-center space-x-1">
                                <i class="fas fa-edit text-xs"></i>
                                <span class="text-sm">Edit</span>
                            </a>
                            <button data-url="@Url.Action("DeleteEmployee", new { Id = item.Id })"
                                    class="delete-btn flex-1 px-3 py-2 bg-red-50 text-red-600 font-medium rounded-lg hover:bg-red-100 transition-colors flex items-center justify-center space-x-1">
                                <i class="fas fa-trash text-xs"></i>
                                <span class="text-sm">Delete</span>
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<div id="deleteModal" class="fixed inset-0 flex items-center justify-center bg-black/50 backdrop-blur-sm hidden z-50 p-4">
    <div class="bg-white rounded-2xl p-8 w-full max-w-md shadow-2xl transform transition-all">
        <div class="flex items-center justify-center w-16 h-16 bg-red-100 rounded-full mx-auto mb-4">
            <i class="fas fa-exclamation-triangle text-red-600 text-2xl"></i>
        </div>
        <h2 class="text-2xl font-bold text-center mb-2">Confirm Deletion</h2>
        <p class="text-gray-600 text-center mb-6">Are you sure you want to delete this employee? This action cannot be undone.</p>
        <div class="flex space-x-3">
            <button id="cancelDelete" class="flex-1 px-6 py-3 bg-gray-100 text-gray-700 font-semibold rounded-xl hover:bg-gray-200 transition-colors">Cancel</button>
            <button id="confirmDelete" class="flex-1 px-6 py-3 bg-gradient-to-r from-red-500 to-red-600 text-white font-semibold rounded-xl hover:from-red-600 hover:to-red-700 shadow-lg transition-all">Delete</button>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let deleteUrl = "";

        document.querySelectorAll('.delete-btn').forEach(btn => {
            btn.addEventListener('click', function (e) {
                e.preventDefault();
                deleteUrl = this.getAttribute('data-url');
                document.getElementById('deleteModal').classList.remove('hidden');
            });
        });

        document.getElementById('cancelDelete').addEventListener('click', function () {
            document.getElementById('deleteModal').classList.add('hidden');
            deleteUrl = "";
        });

        document.getElementById('confirmDelete').addEventListener('click', function () {
            if (deleteUrl) {
                window.location.href = deleteUrl;
            }
        });
    </script>
}
